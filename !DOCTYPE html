    <script>
        // <!-- Visualization & Content Choices: 
        // 1. Step Navigation: Used specific data from "Education Content" and "Teaching Methods". Goal: Organize.
        // 2. Chart: Used "Evaluation Plan" criteria as datasets. Goal: Change/Progress over time.
        // -->

        // --- Data Source (Extracted from Report) ---
        const teachingSteps = [
            {
                id: 1,
                title: "1. íƒìƒ‰ ë° ì„¤ëª…",
                content: "í¬í¬ì˜ ìƒê¹€ìƒˆì™€ ìš©ë„ ì•Œê¸°",
                method: "ì‹¤ë¬¼ í¬í¬ë¥¼ ì œì‹œí•˜ì—¬ ë¾°ì¡±í•œ ë¶€ë¶„ê³¼ ì†ì¡ì´ ë¶€ë¶„ì„ íƒìƒ‰í•˜ê³ , ì´ê²ƒì´ 'ì°ì–´ì„œ ë¨¹ëŠ” ë„êµ¬'ì„ì„ ì‰¬ìš´ ì–¸ì–´ë¡œ ì„¤ëª…í•©ë‹ˆë‹¤.",
                icon: "ğŸ”"
            },
            {
                id: 2,
                title: "2. ëª¨ë¸ë§ ë° ì´‰ì§„",
                content: "í¬í¬ë¥¼ ì˜¬ë°”ë¥´ê²Œ ì¡ëŠ” ë°©ë²• ìµíˆê¸°",
                method: "êµì‚¬ê°€ ì§ì ‘ í¬í¬ ì¡ëŠ” ì‹œë²”(ëª¨ë¸ë§)ì„ ë³´ì…ë‹ˆë‹¤. í•™ìƒì´ ë”°ë¼í•  ë•Œ ì–¸ì–´ì  ì´‰êµ¬(ë§)ì™€ ì‹ ì²´ì  ì´‰êµ¬(ì† ì¡ê¸°)ë¥¼ ì œê³µí•˜ì—¬ ë°”ë¥´ê²Œ ì¡ë„ë¡ ì§€ë„í•©ë‹ˆë‹¤.",
                icon: "âœ‹"
            },
            {
                id: 3,
                title: "3. ë‚œì´ë„ ì¡°ì ˆ",
                content: "í¬í¬ë¡œ ë‹¤ì–‘í•œ ìŒì‹ ì°ì–´ ë¨¹ê¸°",
                method: "ê³¼ì¼ ì¡°ê°ì´ë‚˜ ë–¡ ë“± ì°ê¸° ì‰¬ìš´ ìŒì‹ë¶€í„° ì‹œì‘í•©ë‹ˆë‹¤. í•™ìƒì´ ì„±ê³µí•˜ë©´ ì ì°¨ ì‘ê±°ë‚˜ ë¯¸ë„ëŸ¬ìš´ ìŒì‹ìœ¼ë¡œ ë‚œì´ë„ë¥¼ ë†’ì—¬ê°€ë©° ì—°ìŠµí•©ë‹ˆë‹¤.",
                icon: "ğŸ"
            },
            {
                id: 4,
                title: "4. í–‰ë™ í˜•ì„±",
                content: "í¬í¬ë¡œ ë©´ì„ ê°ê±°ë‚˜ ë– ì„œ ë¨¹ê¸°",
                method: "êµì‚¬ê°€ ë©´ì„ ê°ëŠ” ë™ì‘ì„ ë‹¨ê³„ë³„ë¡œ ë‚˜ëˆ„ì–´ ë³´ì—¬ì¤ë‹ˆë‹¤. í•™ìƒì´ ë©´ì„ ê°ì•„ ì…ìœ¼ë¡œ ê°€ì ¸ê°€ê¸°ê¹Œì§€ì˜ ê³¼ì •ì„ ì¹­ì°¬í•˜ë©° í–‰ë™ í˜•ì„±ì„ ë•ìŠµë‹ˆë‹¤.",
                icon: "ğŸ"
            }
        ];

        // --- State Management ---
        let currentStepId = 1;
        let chartInstance = null;
        let weekCounter = 1;

        // --- DOM Elements ---
        const stepNav = document.getElementById('step-nav');
        const stepContentArea = document.getElementById('step-content-area');
        const stepNumberBg = document.getElementById('step-number-bg');

        // --- Initialization ---
        document.addEventListener('DOMContentLoaded', () => {
            renderStepNav();
            renderStepContent(currentStepId);
            initChart();
        });

        // --- Functions: Instructional Steps ---
        function renderStepNav() {
            stepNav.innerHTML = '';
            teachingSteps.forEach(step => {
                const btn = document.createElement('button');
                btn.className = `step-btn w-full text-left p-4 rounded-lg bg-white shadow-sm hover:bg-gray-50 transition flex items-center ${step.id === currentStepId ? 'active' : ''}`;
                btn.onclick = () => selectStep(step.id);
                
                btn.innerHTML = `
                    <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center mr-3 text-lg shrink-0">
                        ${step.icon}
                    </div>
                    <div>
                        <div class="text-xs text-gray-500 font-bold uppercase tracking-wide mb-1">ë‹¨ê³„ ${step.id}</div>
                        <div class="text-sm font-medium text-gray-800">${step.content}</div>
                    </div>
                `;
                stepNav.appendChild(btn);
            });
        }

        function selectStep(id) {
            currentStepId = id;
            renderStepNav(); // Re-render to update active state
            
            // Fade out effect
            stepContentArea.style.opacity = '0';
            setTimeout(() => {
                renderStepContent(id);
                stepContentArea.style.opacity = '1';
            }, 200);
        }

        function renderStepContent(id) {
            const step = teachingSteps.find(s => s.id === id);
            stepNumberBg.textContent = step.id;
            
            stepContentArea.innerHTML = `
                <div class="mb-2">
                    <span class="text-amber-600 font-bold text-sm tracking-wide uppercase">êµìœ¡ ë‚´ìš©</span>
                    <h3 class="text-2xl font-bold text-gray-800 mb-4">${step.content}</h3>
                </div>
                
                <div class="bg-gray-50 rounded-xl p-5 border border-gray-100">
                    <span class="text-blue-600 font-bold text-sm tracking-wide uppercase block mb-2">êµìˆ˜-í•™ìŠµ ì „ëµ (êµìœ¡ ë°©ë²•)</span>
                    <p class="text-gray-700 leading-7 text-lg">
                        ${step.method}
                    </p>
                </div>

                <div class="mt-6 flex items-center text-sm text-gray-400">
                    <span class="mr-2">ğŸ’¡</span> Tip: ì´ ë‹¨ê³„ê°€ ìµìˆ™í•´ì§ˆ ë•Œê¹Œì§€ ì¶©ë¶„í•œ ì‹œê°„ì„ ì œê³µí•˜ì„¸ìš”.
                </div>
            `;
        }

        // --- Functions: Chart.js ---
        function initChart() {
            const ctx = document.getElementById('progressChart').getContext('2d');
            
            const initialData = {
                labels: ['ì‹œì‘ì '],
                datasets: [
                    {
                        label: 'ì°ì–´ ë¨¹ê¸° ì •í™•ë„ (%)',
                        data: [20], // Initial low baseline based on "Current Level"
                        borderColor: 'rgba(79, 70, 229, 1)', // Indigo
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'ë©´ ê°ì•„ ë¨¹ê¸° ì •í™•ë„ (%)',
                        data: [5], // Harder task, lower baseline
                        borderColor: 'rgba(236, 72, 153, 1)', // Pink
                        backgroundColor: 'rgba(236, 72, 153, 0.1)',
                        tension: 0.3,
                        fill: true
                    }
                ]
            };

            chartInstance = new Chart(ctx, {
                type: 'line',
                data: initialData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'ìˆ˜í–‰ ì •í™•ë„ (%)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom'
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                        }
                    }
                }
            });
        }

        function simulateNewData() {
            if (weekCounter > 15) {
                alert("í•™ê¸° ì‹œë®¬ë ˆì´ì…˜ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.");
                return;
            }

            // Generate realistic looking learning curve data
            // Stabbing gets easier faster than winding noodles
            const lastStab = chartInstance.data.datasets[0].data[chartInstance.data.datasets[0].data.length - 1];
            const lastWind = chartInstance.data.datasets[1].data[chartInstance.data.datasets[1].data.length - 1];

            // Add random increment, slowing down as it reaches 100
            let newStab = lastStab + (Math.random() * 10 + 2);
            let newWind = lastWind + (Math.random() * 8 + 1);

            if (newStab > 100) newStab = 100;
            if (newWind > 95) newWind = 95; // Winding is hard

            chartInstance.data.labels.push(`${weekCounter}ì£¼ì°¨`);
            chartInstance.data.datasets[0].data.push(Math.round(newStab));
            chartInstance.data.datasets[1].data.push(Math.round(newWind));
            
            chartInstance.update();
            weekCounter++;
        }

    </script>
